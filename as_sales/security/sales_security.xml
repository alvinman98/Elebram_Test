<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="as_sales_category" model="ir.module.category">
            <field name="name">Sales</field>
        </record>

        <record id="group_sale_user" model="res.groups">
            <field name="name">Customer</field>
            <field name="category_id" ref="as_sales_category"/>
        </record>

        <record id="group_sale_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="as_sales_category"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin')), (4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>