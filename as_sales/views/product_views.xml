<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="as_uom_category_tree_view" model="ir.ui.view">
            <field name="name">as.uom.category.tree</field>
            <field name="model">as.uom.category</field>
            <field name="arch" type="xml">
                <tree string="Units of Measure Categories" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="as_product_category_tree_view" model="ir.ui.view">
            <field name="name">as.product.category.tree</field>
            <field name="model">as.product.category</field>
            <field name="arch" type="xml">
                <tree string="Product Categories" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="as_product_brand_tree_view" model="ir.ui.view">
            <field name="name">as.product.brand.tree</field>
            <field name="model">as.product.brand</field>
            <field name="arch" type="xml">
                <tree string="Product Brands" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- as.product.uom tree view -->
        <record id="as_product_uom_view_tree" model="ir.ui.view">
            <field name="name">as.product.uom.view.tree</field>
            <field name="model">as.product.uom</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="categ_id"/>
                </tree>
            </field>
        </record>
        <!-- as.product.uom form view -->
        <record id="as_product_uom_view_form" model="ir.ui.view">
            <field name="name">as.product.uom.view.form</field>
            <field name="model">as.product.uom</field>
            <field name="arch" type="xml">
                <form string="Unit of Measure">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="categ_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- as.product tree view -->
        <record id="as_product_view_tree" model="ir.ui.view">
            <field name="name">as.product.view.tree</field>
            <field name="model">as.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>

        <!-- as.product form view -->
        <record id="as_product_view_form" model="ir.ui.view">
            <field name="name">as.product.view.form</field>
            <field name="model">as.product</field>
            <field name="arch" type="xml">
                <form string="Product Catalogs">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Product Name"/>
                            <h1><field name="name" placeholder="Product Name" required="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="code" required="1"/>
                                <field name="uom_id" required="1"/>
                                <field name="barcode"/>
                            </group>
                            <group>
                                <field name="categ_id" required="1"/>
                                <field name="brand_id" required="1"/>
                                <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- as.product action window -->
        <record id="as_product_action" model="ir.actions.act_window">
            <field name="name">Product Catalogs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">as.product</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- as.uom.category action window -->
        <record id="as_uom_category_action" model="ir.actions.act_window">
            <field name="name">Unit of Measure Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">as.uom.category</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- as.product.category action window -->
        <record id="as_product_category_action" model="ir.actions.act_window">
            <field name="name">Product Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">as.product.category</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- as.product.brand action window -->
        <record id="as_product_brand_action" model="ir.actions.act_window">
            <field name="name">Product Brands</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">as.product.brand</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- as.product.uom action window -->
        <record id="as_product_uom_action" model="ir.actions.act_window">
            <field name="name">Unit of Measures</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">as.product.uom</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>