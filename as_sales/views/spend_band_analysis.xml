<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- spend.band.analysis pivot view -->
        <record id="spend_band_analysis_view_pivot" model="ir.ui.view">
            <field name="name">spend.band.analysis.view.pivot</field>
            <field name="model">spend.band.analysis</field>
            <field name="arch" type="xml">
                <pivot string="Spend Band Analysis" disable_linking="True">
                    <field name="product_id" type="row"/>
                    <field name="order_date" type="row"/>
                    <field name="trx_text" type="col"/>
                    <field name="spend_type" type="col"/>
                </pivot>
            </field>
        </record>

        <!-- spend.band.analysis action window -->
        <record id="spend_band_analysis_action" model="ir.actions.act_window">
            <field name="name">Spend Band Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">spend.band.analysis</field>
            <field name="view_mode">pivot</field>
        </record>
    </data>
</odoo>